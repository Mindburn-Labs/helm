                "requires_approval": [
                    "compliance_officer",
                    "aml_team"
                ],
                "denied_tools": [
                    "direct_transfer"
                ]
            }
        },
        {
            "id": "p004",
            "name": "Account Closure",
            "action": "CLOSE_ACCOUNT",
            "verdict": "DENY",
            "constraints": {
                "requires_approval": [
                    "branch_manager",
                    "compliance_officer",
                    "treasury_head"
                ]
            }
        }
