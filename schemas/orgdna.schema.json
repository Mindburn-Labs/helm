{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OrgDNA Seed Schema",
  "type": "object",
  "properties": {
    "version": { "type": "string", "const": "0.1.0-SEED" },
    "entity_id": { "type": "string" },
    "purpose": { "type": "string" },
    "constraints": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "mapl_ref": { "type": "string" }
        }
      }
    }
  },
  "required": ["version", "entity_id", "purpose"]
}
